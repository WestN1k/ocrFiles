<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="yamanov.gui.MainController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="scan_folder" mnemonicParsing="false" onAction="#scanFolderAction" text="Сканировать папку">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
            <ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="270.0" progress="0.0" />
            <Button fx:id="scan_file" mnemonicParsing="false" onAction="#scanFileAction" text="Сканировать файл">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <TableView fx:id="tableView" editable="true" prefHeight="288.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="numberColumn" maxWidth="200.0" minWidth="100.0" prefWidth="100.0" text="Номер запроса" />
          <TableColumn fx:id="dateColumn" maxWidth="200.0" minWidth="100.0" prefWidth="100.0" text="Дата запроса" />
            <TableColumn fx:id="fioColumn" minWidth="150.0" prefWidth="150.0" text="ФИО" />
            <TableColumn fx:id="addressColumn" minWidth="250.0" prefWidth="250.0" text="Адрес" />
        </columns>
      </TableView>
      <HBox prefHeight="49.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#saveToSCV" text="сохранить в файл CSV">
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <TextField fx:id="pathToSCV" alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" right="5.0" top="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
   </children>
</VBox>
